{
  "name": "securelend-sdk-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "SecureLend SDK - Official client libraries for financial services comparison",
  "workspaces": [
    "packages/*",
    "integrations/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist integrations/*/dist",
    "dev": "npm run dev -w @securelend/sdk",
    "publish:all": "npm run build && lerna publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "lerna": "^8.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SecureLend/sdk.git"
  },
  "keywords": [
    "securelend",
    "sdk",
    "financial-services",
    "loans",
    "banking",
    "credit-cards",
    "fintech",
    "typescript",
    "mcp"
  ],
  "author": "SecureLend <developers@securelend.ai>",
  "license": "MIT"
}
